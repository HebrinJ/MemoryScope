<Window x:Class="MemoryScope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryScope"
        mc:Ignorable="d"
        Title="Калькулятор памяти" Height="600" Width="1000" ResizeMode="NoResize" Topmost="False">
    <Grid x:Name="MainGrid" RenderTransformOrigin="0.5,0.5" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="189*"></RowDefinition>
            <RowDefinition Height="232*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="AddItem" Grid.Column="0" Grid.Row="0" Content="Добавить элемент" HorizontalAlignment="Left" Margin="43,26,0,0" VerticalAlignment="Top" Width="125" Height="42" Click="AddItem_Click"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Height="153" Margin="201,26,0,0" VerticalAlignment="Top" Width="187" Grid.ColumnSpan="2">
            <TextBlock x:Name="El1" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El2" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El3" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El4" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El5" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El6" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El7" Text="" Height="22" FontSize="14"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Left" Height="153" Margin="139,26,0,0" VerticalAlignment="Top" Width="39">
            <Button x:Name="Add1" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add2" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add3" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add4" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add5" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add6" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add7" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Left" Height="153" Margin="201,26,0,0" VerticalAlignment="Top" Width="187" Grid.ColumnSpan="2">
            <TextBlock x:Name="El8" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El9" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El10" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El11" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El12" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El13" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El14" Text="" Height="22" FontSize="14"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="2" HorizontalAlignment="Left" Height="153" Margin="139,26,0,0" VerticalAlignment="Top" Width="39">
            <Button x:Name="Add8" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add9" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add10" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add11" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add12" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add13" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
            <Button x:Name="Add14" Content="Add" Height="22" IsEnabled="False" Click="AddItem_Click"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="2" HorizontalAlignment="Left" Height="153" Margin="195,26,0,0" VerticalAlignment="Top" Width="255" Grid.ColumnSpan="2">
            <TextBlock x:Name="El15" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El16" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El17" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El18" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El19" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El20" Text="" Height="22" FontSize="14"/>
            <TextBlock x:Name="El21" Text="" Height="22" FontSize="14"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Background="Pink" Height="206" Margin="110,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="278">
            <Label Content="Stack" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>
            <TextBlock x:Name="S1" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="S2" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="S3" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="S4" Text="" FontSize="14" Height="24"/>
