            <TextBlock x:Name="S6" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="S7" Text="" FontSize="14" Height="24"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" Background="SteelBlue" Height="206" Margin="110,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="277">
            <Label Content="Heap" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>
            <TextBlock x:Name="H1" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="H2" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="H3" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="H4" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="H5" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="H6" Text="" FontSize="14" Height="24"/>
            <TextBlock x:Name="H7" Text="" FontSize="14" Height="24"/>
        </StackPanel>
        <WrapPanel x:Name="InputPanel" Grid.ColumnSpan="3" Margin="143,52,75,192" Grid.RowSpan="2" Background="Gray" IsEnabled="False" Visibility="Hidden">
            <Label Content="Значения" Width="180"/>
            <Label Content="Ссылочные" Width="180"/>
            <RadioButton x:Name="NameByte" GroupName="SelectionType" Content="byte sbyte short ushort" Width="174" Height="23"/>
            <RadioButton x:Name="NameObject" GroupName="SelectionType" Content="object" Width="174" Height="23"/>
            <RadioButton x:Name="NameInt" GroupName="SelectionType" Content="int uint long ulong" Width="174" Height="23"/>
            <RadioButton x:Name="NameString" GroupName="SelectionType" Content="string" Width="174" Height="23"/>
            <RadioButton x:Name="NameFloat" GroupName="SelectionType" Content="float double" Width="174" Height="23"/>
            <RadioButton x:Name="NameClass" GroupName="SelectionType" Content="class interface" Width="174" Height="23"/>
            <RadioButton x:Name="NameDec" GroupName="SelectionType" Content="deciaml bool char" Width="174" Height="23"/>
            <RadioButton x:Name="NameDelegate" GroupName="SelectionType" Content="delegate" Width="174" Height="23"/>
            <RadioButton x:Name="NameEnum" GroupName="SelectionType" Content="enum struct" Width="174" Height="23"/>
            <CheckBox Content="ref"/>
            <CheckBox Content="out"/>
            <Button Content="Добавить" Click="Button_Click"/>

        </WrapPanel>
        <StackPanel x:Name="AddNamePanel" Grid.ColumnSpan="2" Grid.Column="1" Background="Gray" Visibility="Hidden" HorizontalAlignment="Left" Height="76" Margin="115,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="168">
            <Label Content="Введите имя переменной"/>
            <TextBox x:Name="NameField" Height="23" TextWrapping="Wrap" Text=""/>
            <Button x:Name="AddName" Content="Добавить" Click="AddName_Click"/>
        </StackPanel>
    </Grid>
</Window>
